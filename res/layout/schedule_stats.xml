<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView01"
        android:layout_toRightOf="@+id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionName"
        android:text="@string/account:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView02"
        android:layout_toRightOf="@+id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionAccount"
        android:text="@string/value:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView03"
        android:layout_toRightOf="@+id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionValue"
        android:text="@string/type:" />

    <TextView
        android:id="@+id/TextTransactionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView04"
        android:layout_toRightOf="@+id/TextView05" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionType"
        android:text="@string/category:" />

    <TextView
        android:id="@+id/TextTransactionCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView05"
        android:layout_toRightOf="@id/TextView05" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionCategory"
        android:text="@string/memo:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView06"
        android:layout_toRightOf="@id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionMemo"
        android:text="@string/start_on:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionOffset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView07"
        android:layout_toRightOf="@id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionOffset"
        android:text="@string/every:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView08"
        android:layout_toRightOf="@id/TextView05" >
    </TextView>

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextTransactionRate"
        android:text="@string/cleared:" >
    </TextView>

    <TextView
        android:id="@+id/TextTransactionCleared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/TextView09"
        android:layout_toRightOf="@id/TextView05" >
    </TextView>

</RelativeLayout>