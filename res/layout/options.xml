<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:key="pref_screen_default" >

    <PreferenceCategory
        android:summary="Change looks"
        android:title="Appearance" >

        <PreferenceScreen
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:key="pref_screen_transactions"
            android:summary="Change appearance of transactions"
            android:title="Transaction Appearance" >

            <PreferenceCategory
                android:summary="Change background"
                android:title="Background" >

                <EditTextPreference
                    android:defaultValue="#E8E8E8"
                    android:inputType="text|phone"
                    android:key="@string/pref_key_transaction_backgroundColor"
                    android:summary="Background color of each transaction row"
                    android:title="Background color" >
                </EditTextPreference>
            </PreferenceCategory>

            <PreferenceCategory
                android:summary="Change fonts"
                android:title="Fonts" >

                <EditTextPreference
                    android:defaultValue="20"
                    android:inputType="number|phone"
                    android:key="@string/pref_key_transaction_nameSize"
                    android:summary="Change the size of Name field"
                    android:title="Size of name" >
                </EditTextPreference>

                <EditTextPreference
                    android:defaultValue="#000000"
                    android:inputType="number|phone"
                    android:key="@string/pref_key_transaction_nameColor"
                    android:summary="Change the color of Name field"
                    android:title="Color of name" >
                </EditTextPreference>
            </PreferenceCategory>

            <PreferenceCategory
                android:summary="Change fields"
                android:title="Fields" >

                <PreferenceScreen
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:key="pref_screen_transaction_fields"
                    android:summary="Change fields visible for transaction"
                    android:title="Transaction Fields" >

                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="checkbox_transaction_name"
                        android:summary="Name Field. May Require Restart"
                        android:title="Name" >
                    </CheckBoxPreference>

                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="checkbox_transaction_value"
                        android:summary="Value Field. May Require Restart"
                        android:title="Value" >
                    </CheckBoxPreference>

                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="checkbox_transaction_date"
                        android:summary="Date Field. May Require Restart"
                        android:title="Date" >
                    </CheckBoxPreference>

                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="checkbox_transaction_time"
                        android:summary="Time Field. May Require Restart"
                        android:title="Time" >
                    </CheckBoxPreference>
                </PreferenceScreen>
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceScreen
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:key="pref_screen_transactions"
        android:summary="Change appearance of accounts"
        android:title="Account Appearance" >

        <PreferenceCategory
            android:summary="Change background"
            android:title="Background" >

            <EditTextPreference
                android:defaultValue="#E8E8E8"
                android:inputType="text|phone"
                android:key="@string/pref_key_account_backgroundColor"
                android:summary="Background color of each account row"
                android:title="Background color" >
            </EditTextPreference>
        </PreferenceCategory>

        <PreferenceCategory
            android:summary="Change fonts"
            android:title="Fonts" >

            <EditTextPreference
                android:defaultValue="20"
                android:inputType="number|phone"
                android:key="@string/pref_key_account_nameSize"
                android:summary="Change the size of Name field"
                android:title="Size of main" >
            </EditTextPreference>

            <EditTextPreference
                android:defaultValue="#000000"
                android:inputType="number|phone"
                android:key="@string/pref_key_account_nameColor"
                android:summary="Change the color of Name field"
                android:title="Color of name" >
            </EditTextPreference>
        </PreferenceCategory>

        <PreferenceCategory
            android:summary="Change fields"
            android:title="Fields" >

            <PreferenceScreen
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:key="pref_screen_account_fields"
                android:summary="Change fields visible for account"
                android:title="Account Fields" >

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="checkbox_account_name"
                    android:summary="Name Field. May Require Restart"
                    android:title="Name" >
                </CheckBoxPreference>

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="checkbox_account_value"
                    android:summary="Balance Field. May Require Restart"
                    android:title="Balance" >
                </CheckBoxPreference>

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="checkbox_account_Date"
                    android:summary="Date Field. May Require Restart"
                    android:title="Date" >
                </CheckBoxPreference>

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="checkbox_account_time"
                    android:summary="Time Field. May Require Restart"
                    android:title="Time" >
                </CheckBoxPreference>
            </PreferenceScreen>
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceCategory
        android:summary="Change behavior"
        android:title="Behavior" >

        <EditTextPreference
            android:defaultValue="LAME!"
            android:key="blah"
            android:summary="Here&apos;s a simple Textbox"
            android:title="My Lame Text Box" >
        </EditTextPreference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="haha"
            android:summary="Here&apos;s a simple Checkbox"
            android:title="My Boring Checkbox" >
        </CheckBoxPreference>

        <ListPreference
            android:entries="@array/pref_transaction_listOptions"
            android:entryValues="@array/pref_transaction_listValues"
            android:key="transaction_fields"
            android:summary="Which transaction fields are visible"
            android:title="Transaction Fields" >
        </ListPreference>

        <ListPreference
            android:entries="@array/pref_account_listOptions"
            android:entryValues="@array/pref_account_listValues"
            android:key="account_fields"
            android:summary="Which account fields are visible"
            android:title="Account Fields" >
        </ListPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Random Options"
        android:title="Misc" >

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="checkbox_default"
            android:summary="Use Default Values instead of User-Defined Ones. May Require Restart"
            android:title="Use Default Values" >
        </CheckBoxPreference>
    </PreferenceCategory>

</PreferenceScreen>