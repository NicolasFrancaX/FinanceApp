<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_portrait"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@style/Theme.Sherlock" >

    <Button
        android:id="@+id/dashboard_checkbook"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="15dp"
        android:drawableTop="@drawable/dashboard_exit"
        android:padding="15dp"
        android:text="@string/accounts"
        android:textColor="#FFFFFF" >
    </Button>

    <Button
        android:id="@+id/dashboard_schedules"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_margin="15dp"
        android:layout_toRightOf="@+id/dashboard_checkbook"
        android:drawableTop="@drawable/dashboard_exit"
        android:padding="15dp"
        android:text="Schedules"
        android:textColor="#FFFFFF" >
    </Button>

    <Button
        android:id="@+id/dashboard_manage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/dashboard_checkbook"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/dashboard_exit"
        android:padding="15dp"
        android:text="Manage"
        android:textColor="#FFFFFF" >
    </Button>

    <Button
        android:id="@+id/dashboard_statistics"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/dashboard_schedules"
        android:layout_margin="15dp"
        android:layout_toRightOf="@+id/dashboard_manage"
        android:drawableTop="@drawable/dashboard_exit"
        android:padding="15dp"
        android:text="Statistics"
        android:textColor="#FFFFFF" >
    </Button>

    <Button
        android:id="@+id/dashboard_exit"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignRight="@+id/dashboard_statistics"
        android:layout_below="@+id/dashboard_statistics"
        android:layout_marginTop="15dp"
        android:drawableTop="@drawable/dashboard_exit"
        android:padding="15dp"
        android:text="@string/exit"
        android:textColor="#FFFFFF" >
    </Button>

</RelativeLayout>